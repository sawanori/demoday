<p id="notice"><%= notice %></p>
<div class="row col-sm-12">
  <h1>
    <%= @spot.title %>
  </h1>
</div>

<div class="row">
<div class="col-sm-8">
  <p>
    <% if @spot.image? %>
     <div class="thumbnail">
       <%= image_tag @spot.image.url %>

     </div>
     <% else %>
    <div class="thumbnail">
     <%= image_tag 'teraview' %>
    </div>
    <% end %>
  </p>
</div>
<div class="col-sm-4">
  <p>
    <strong>スポット名:</strong>
    <%= @spot.title %>
  </p>
  <p>
    <strong>宗派:</strong>
    <%= @spot.sect %>
  </p>

  <p>
    <strong>スポット紹介:</strong>
    <%= @spot.description %>
  </p>


  <p>
    <strong>住所:</strong>
    <%= @spot.place %>
  </p>

  <p>
    <strong>TEL:</strong>
    <%= @spot.phone %>
  </p>

  <div class="thumbnail" >
  <h4>おさいせんを投げる</h4>
  <%= form_tag(action: :pay, method: :post) do %>
      <script src="https://checkout.webpay.jp/v3/" class="webpay-button" data-key="test_public_b7pf9ucg6cegfrkax124ub14" data-lang="ja"></script>
    <% end %>
  </div>
  <%= render "votes" %>
</div>
</div>




<%= render "postarticles/index" , locals: { postarticles: @postarticles } %>


<%= link_to "体験談を説く", new_spot_postarticle_path(@spot), class: 'btn bg-danger btn-lg btn-block' %>

<%= link_to '編集する', edit_spot_path(@spot,@user) %> |
<%= link_to '一覧に戻る', spots_path %>
