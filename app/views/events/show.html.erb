<p id="notice"><%= notice %></p>

<%= image_tag @event.event_image.url %>

<p>
  <strong>修行テーマ:</strong>
  <%= @event.event_title %>
</p>

<p>
  <strong>説明:</strong>
  <%= @event.event_content %>
</p>

<p>
  <strong>料金:</strong>
  <%= @event.event_charge %>
</p>

<p>
  <strong>定員:</strong>
  <%= @event.member_count %>
</p>

<p>
  <strong>作成者:</strong>
  <%= @event.user %>
</p>

<p>
  <strong>場所:</strong>
  <%= @event.spot %>
</p>

<p>
  <strong>日時:</strong>
  <%= @event.event_day %>
</p>
<% if user_signed_in? %>

 <button class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#createTicket">
   参加する
 </button>

<% else %>
<%= link_to '参加する', new_event_ticket_path(@event), class: "btn btn-primary btn-lg btn-block" %>
<% end %>



<h3>連絡掲示板</h3>
<%= render partial: 'comments/form', locals: {comment: @comment, event: @event} %>
<div id ="comments_area">
  <%= render partial: 'comments/index', locals: {comments: @comments, event: @event} %>
</div>
<% if current_user.id == @event.user_id %>
<%= link_to '編集', edit_event_path(@event) %>|
<% end %>
<%= link_to '戻る', events_path %>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
