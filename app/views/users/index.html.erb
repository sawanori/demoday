<section id="user-detail" class="scroll-page bg-white">
  <div class="page-header">
    <h2>マイページ</h2>
  </div>
  <table>

    <tr>
      <th>お名前</th>
      <td><%= current_user.name %></td>
      <div class="thumbnail">
       <%= image_tag current_user.avatar_url %>
      </div>

    </tr>
  </table>
</section>

<div>
  <p>あなたが説いた体験談</p>
<% @user.each do |f| %>
<%= f.id %>
<%= f.title %>
<%= f.content %>
<%= link_to "詳細を見る", postarticle_path(current_user)%>
<% end %>
</div>

<div>
  <p>参加予定のイベント</p>

</div>




<h2>フォロワー</h2>
<% @users.each do |user| %>
<div class="thumbnail">
 <%= image_tag user.avatar_url %>
</div>
<%= user.name %>
<%= render 'follow_form', user: user %>

<% end %>
